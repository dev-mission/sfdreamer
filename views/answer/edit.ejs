<%- contentFor('title') %> Editing <%= record.prompt %>
<%- contentFor('body') %>

<h1>Editing:<br> <%= record.prompt %></h1>


<form method="post" action="/answer/<%= record.id %>">
  <label for="QuestionId">Which question it belongs to</label><br>
  <select name="QuestionId">
    <% for (let question of questions) { %>
      <option value="<%= question.id %>" <%= record.QuestionId == question.id ? 'selected' : '' %>><%= question.prompt %></option>
      <% } %>
  </select><br>
  <br>
  <label for="value">Question Value</label><br>
  <input type="text" value="<%= record.value%> " id="value" name="value">
  <br>
  <br>
  <label for="NextQuestionId">Next Question</label><br>
  <select name="NextQuestionId">
    <% for (let question of questions) { %>
      <option value="<%= question.id %>" <%= record.NextQuestionId == question.id ? 'selected' : '' %>><%= question.prompt %></option>
      <% } %>
  </select><br>
  <br>
  <button type="submit">Submit</button>
</form>
