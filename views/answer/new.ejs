<%- contentFor('title') %> Create a new Answer
<%- contentFor('body') %>

<h1>New answer</h1>

<form method="post" action="/answer">
  <select name="QuestionId">
    <% for (let record of records) { %>
      <option value="<%= record.id %>"><%= record.prompt %></option>
      <% } %>
  </select><br>
  <br>
  <label for="value">Answer</label><br>
  <input type="text" id="value" name="value"><br>
  <br>
  <label for="NextQuestionId">Next Question</label><br>
  <select name="NextQuestionId">
    <% for (let record of records) { %>
      <option value="<%= record.id %>"><%= record.prompt %></option>
      <% } %>
  </select><br>
  <br>
  <button type="submit">Submit</button>
</form>
