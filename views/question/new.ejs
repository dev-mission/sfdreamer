<%- contentFor('title') %> Create a new question
<%- contentFor('body') %>

<h1>New question</h1>



<br>
<br>
<form method="post" action="/questions">
    <label for="prompt">Question</label>
    <input type="text" id="prompt" name="prompt">


    <label for="answer_type">Answer Type</label>
    <input type="text" id="answer_type" name="answer_type">
    <br>

    <label for="questionnaire_type">Questionnaire Yype</label>
    <input type="text" id="questionnaire_type" name="questionnaire_type">
    <br>

    <label for="step">step</label>
    <input type="text" id="step" name="step">
    <br>


    <br>
    <br>
    <select name="QuestionnaireId">
      <% for (let record of records) { %>
        <option value="<%= record.id %>"><%= record.title %></option>
        <% } %>
    </select>
    <br>
    <br>

    <button type="submit">Submit</button>
  </form>