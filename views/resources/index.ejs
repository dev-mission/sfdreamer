<%- contentFor('title') %>
<%- contentFor('body') %>
<head>
<u><h1>Resources Page</h1></u>
<style>
  * {
    box-sizing: border-box;
  }
  .column {
    float: left;
    width: 50%;
    padding: 10px;
    height: 300px;
  }
  .row:after {
    content: "";
    display: table;
    clear: both;
  }
  </style>
  </head>
  <body>

<ul>
  <%for(let record of records){%>

    <li>
      <div class="row">
        <div class="column">
         <% if (record.logo) { %>


      <img src="<%= assetUrl(record.logo) %>">
      <% } %>
      </div>
        <div class="column">
          <%=record.name %>
          <%=record.orgtype%>
          <%=record.contactperson %>
          <%=record.phone%>
          <%=record.address%>
          <%=record.email%>
          <%=record.website%></li>
          </div>
        </div>


      <form method="get" action="/resources/<%= record.id %>"> <button type="submit">Edit</button></form>

      <form method="post" action="/resources/<%= record.id %>/delete"> <button type="submit">Delete</button></form>

  <% } %>
<p><a href="/resources/new">NEW Resource!</a></p>

</ul>
</body>
